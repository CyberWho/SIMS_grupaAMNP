<Window x:Class="Hospital.xaml_windows.Secretary.PatientUpdate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital.xaml_windows.Secretary"
        mc:Ignorable="d"
        Title="PatientUpdate" Height="450" Width="460">
    <Grid Margin="0,0,2,0">
        <Label Grid.Column ="0" Grid.Row="0" Content="ID adrese" HorizontalAlignment="Left" Margin="100,162,0,0" VerticalAlignment="Top"/>
        
        
        <TextBox Grid.Column ="1" Grid.Row="0" HorizontalAlignment="Left" Text ="{Binding Path=Id_address, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="23" Margin="250,162,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>


        <Button Content="Sacuvajte pacijenta" HorizontalAlignment="Left" Margin="170,290,0,0" VerticalAlignment="Top" Width="105" Click="Sacuvaj_pacijenta" Height="30"/>

    </Grid>
</Window>
