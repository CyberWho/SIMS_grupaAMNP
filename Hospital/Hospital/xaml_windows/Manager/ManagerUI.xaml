<Window x:Class="Hospital.xaml_windows.Manager.ManagerUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital.xaml_windows.Manager"
        mc:Ignorable="d"
        Title="ManagerUI" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="roomsBtn" Content="Prostorije" HorizontalAlignment="Left" Margin="172,134,0,0" VerticalAlignment="Top" Width="75" Click="roomBtnClick"/>
        <Button x:Name="drugsBtn" Content="Lekovi" HorizontalAlignment="Left" Margin="316,134,0,0" VerticalAlignment="Top" Width="75" Click="drugsBtnClick"/>
        <Button x:Name="inventorySearchBtn" Background="#3499eb" HorizontalAlignment="Left" Margin="494,42,0,0" VerticalAlignment="Top" Width="160" Click="inventorySearchBtn_Click" Height="160">
            <TextBlock FontFamily="Segoe UI Symbol" Text="     &#xE11A;&#xa;Pretraga&#xa;inventara" Foreground="#e8ebed" FontSize="30" >
                <TextBlock.Effect>
                    <DropShadowEffect ShadowDepth="3" Direction="330" Color="Black" BlurRadius="4"/>
                </TextBlock.Effect>
            </TextBlock>
            <Button.Effect>
                <DropShadowEffect ShadowDepth="4" Direction="330" Color="Gray" BlurRadius="4"/>
            </Button.Effect>
        </Button>
        <Button x:Name="renovationsBtn" HorizontalAlignment="Left" Background="#3499eb" Margin="494,226,0,0" VerticalAlignment="Top" Width="160" Click="renovationsBtn_Click" Height="160">
            <TextBlock FontFamily="Segoe UI Symbol" Text="      &#xE15E;&#xa;Renovacije" Foreground="#e8ebed" FontSize="30" >
                <TextBlock.Effect>
                    <DropShadowEffect ShadowDepth="3" Direction="330" Color="Black" BlurRadius="4"/>
                </TextBlock.Effect>
            </TextBlock>
            <Button.Effect>
                <DropShadowEffect ShadowDepth="4" Direction="330" Color="Gray" BlurRadius="4"/>
            </Button.Effect>
        </Button>
    </Grid>
</Window>
