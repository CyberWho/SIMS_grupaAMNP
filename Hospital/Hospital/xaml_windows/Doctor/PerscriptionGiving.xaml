        <Button Content="Dodaj recept" HorizontalAlignment="Left" Margin="411,332,0,0" VerticalAlignment="Top" Width="99" Height="29" Click="AddPerscriptionToDb"/>
        <Button Content="Odustani" HorizontalAlignment="Left" Margin="528,332,0,0" VerticalAlignment="Top" Width="113"  Height="48" Click="ReturnOption"/>

    </Grid>
</Window>
