<Window x:Class="Hospital.xaml_windows.Patient.PatientInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital.xaml_windows.Patient"
        mc:Ignorable="d"
        Title="PatientInfo" Height="450" Width="800" Closed="Window_Closed" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Menu Style="{StaticResource Horizontal}">
            <MenuItem x:Name="PocetnaStranica" Header="Pocetna stranica" HorizontalAlignment="Left" Click="PocetnaStranica_Click"/>
            <MenuItem x:Name="MojProfil" Header="Moj profil" HorizontalAlignment="Left" Click="MojProfil_Click"/>
            <MenuItem x:Name="MojiPregledi" Header="Pregledi" HorizontalAlignment="Left" Click="MojiPregledi_Click" />

        </Menu>
        <Label Content="Moj profil" Grid.Column="1" FontSize="24" HorizontalAlignment="Left" Margin="267,26,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.279,-0.511"/>

        <Label Content="Korisnicko ime:" Grid.Column="1" HorizontalAlignment="Left" Margin="124,90,0,0" VerticalAlignment="Top"/>
        <Label Content="Ime:" Grid.Column="1" HorizontalAlignment="Left" Margin="124,121,0,0" VerticalAlignment="Top"/>
        <Label Content="Prezime:" Grid.Column="1" HorizontalAlignment="Left" Margin="124,152,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.485,0.163"/>
        <Label Content="Email:" Grid.Column="1" HorizontalAlignment="Left" Margin="124,214,0,0" VerticalAlignment="Top"/>
        <Label Content="Telefon:" Grid.Column="1" HorizontalAlignment="Left" Margin="124,183,0,0" VerticalAlignment="Top"/>
        <TextBox Text="{Binding Path=Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="238,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181"/>
        <TextBox Grid.Column="1" Text="{Binding Path=NName, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="23" Margin="238,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181"/>
        <TextBox  Grid.Column="1" Text="{Binding Path=Surname, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="23" Margin="238,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181"/>
        <TextBox   Grid.Column="1" Text="{Binding Path=PhoneNumber, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="23" Margin="238,187,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181"/>
        <TextBox   Grid.Column="1" Text="{Binding Path=Email, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="23" Margin="238,218,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181"/>
    </Grid>
</Window>
