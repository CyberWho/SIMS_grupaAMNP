<Window x:Class="Hospital.xaml_windows.Manager.ManagerUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital.xaml_windows.Manager"
        mc:Ignorable="d"
        Title="ManagerUI" Height="450" Width="800" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <DataGrid x:Name="myDataGrid" HorizontalAlignment="Left" Height="399" Margin="311,10,0,0" VerticalAlignment="Top" Width="467" SelectionUnit="FullRow" SelectionMode="Single" SelectionChanged="myDataGrid_SelectionChanged">
            <DataGrid.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#696969"/>
            </DataGrid.Resources>
        </DataGrid>
        <Label Content="Floor" HorizontalAlignment="Left" Margin="60,70,0,0" VerticalAlignment="Top"/>
        <Label Content="Area" HorizontalAlignment="Left" Margin="60,101,0,0" VerticalAlignment="Top"/>
        <Label Content="Desciption" HorizontalAlignment="Left" Margin="60,132,0,0" VerticalAlignment="Top"/>
        <Label Content="Type" HorizontalAlignment="Left" Margin="60,163,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="floor_txtbx" HorizontalAlignment="Left" Height="23" Margin="137,73,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="area_txtbx" HorizontalAlignment="Left" Height="23" Margin="137,104,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="desc_txtbx" HorizontalAlignment="Left" Height="23" Margin="137,135,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="rtype_cmbbx" HorizontalAlignment="Left" Margin="137,167,0,0" VerticalAlignment="Top" Width="120" DisplayMemberPath="Display" SelectedValuePath="Value"/>
        <GroupBox Header="Room information" HorizontalAlignment="Left" Height="155" Margin="38,46,0,0" VerticalAlignment="Top" Width="241"/>
        <Button x:Name="add_btn" Content="Add" HorizontalAlignment="Left" Margin="38,216,0,0" VerticalAlignment="Top" Width="75" Click="add_btn_Click"/>
        <Button x:Name="update_btn" Content="Update" HorizontalAlignment="Left" Margin="121,216,0,0" VerticalAlignment="Top" Width="75" Click="update_btn_Click" IsEnabled="False"/>
        <Button x:Name="delete_btn" Content="Delete" HorizontalAlignment="Left" Margin="204,216,0,0" VerticalAlignment="Top" Width="75" Click="delete_btn_Click" IsEnabled="False"/>
        <Button x:Name="clear_btn" Content="Clear" HorizontalAlignment="Left" Margin="38,252,0,0" VerticalAlignment="Top" Width="75" Click="clear_btn_Click"/>
    </Grid>
</Window>
